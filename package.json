{
  "name": "@james-rowbotham/monochrome",
  "version": "1.0.1",
  "description": "simple web3 react component library",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --port 3002",
    "build": "NODE_ENV=production webpack",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier-format": "npx prettier --config ./.prettierrc.js src/**/*.ts src/**/*.tsx --write",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "react",
    "components",
    "typescript"
  ],
  "author": "James Rowbotham",
  "license": "ISC",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.3",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.16",
    "@types/styled-system": "^5.1.13",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.4.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "prettier": "^2.5.1",
    "react-html-props": "^1.0.32",
    "shared-configs": "1.0.2",
    "ts-jest": "^27.1.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  }
}
